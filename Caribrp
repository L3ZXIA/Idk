local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

if PlayerGui:FindFirstChild("ScriptLoaderGUI") then
    PlayerGui.ScriptLoaderGUI:Destroy()
end

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ScriptLoaderGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 100)
frame.Position = UDim2.new(0.5, -150, 0.5, -50)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, -20, 1, -20)
label.Position = UDim2.new(0, 10, 0, 10)
label.BackgroundTransparency = 1
label.Text = "Loading script..."
label.Font = Enum.Font.GothamBold
label.TextSize = 18
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.Parent = frame

task.spawn(function()
    task.wait(20) -- Optional: show loader for 20 second

    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/L3ZXIA/Idk/refs/heads/main/Caribrp%20script", true))()
    end)

    if not success then
        label.Text = "Error loading script:\n" .. tostring(err)
        label.TextColor3 = Color3.fromRGB(255, 100, 100)
    else
        label.Text = "Script loaded successfully!"
        label.TextColor3 = Color3.fromRGB(100, 255, 100)
        task.wait(1)
        screenGui:Destroy()
    end
end)
